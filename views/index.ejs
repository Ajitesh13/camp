<!DOCTYPE html>
<html>
    <head>
        <title>MyBam</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
<body background="http://i.imgur.com/2LSMCmJ.jpg">
<nav class="navbar-default navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a style = "font-size: 22px" class="navbar-brand" href="/">MyBam</a>
    </div>
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
			<% if(!currentuser){ %>
			 <li><a style = "font-size: 18px" href="/login">Login</a></li>
             <li><a style = "font-size: 18px" href="/register">Sign-up</a></li>
			<%} else{ %>
			 <li><a style = "font-size: 18px">Signed in as <%= currentuser.username %></a></li>
			 <li><a style = "font-size: 18px" href="/logout">Log Out</a></li>	
            <% } %>       
        </ul>
    </div>
	</div>
 </nav>
<br>
<br>
<div class="container">
	<% if(error && error.length > 0) { %>
	<div class="alert alert-danger" role="alert">
 	   <h4><%= error %></h4>
    </div>	
	<% }  %>
		<% if(success && success.length > 0) { %>
	<div class="alert alert-success" role="alert">
 	    <h4><%= success %></h4>
    </div>
		<% }  %>
</div>
<div class="container">
	<header class="jumbotron">
		  <h1>Welcome to Berhampur</h1>
		  <p>View our hand picked pictures...</p>
		  <p>
			<a class="btn btn-lg btn-primary" href="/campground/new">Add a new place</a>
		  </p>
	</header>
   <div class="row text-center" style="display:flex;flex-wrap: wrap;">
     <% campground.forEach(function(campground){ %>
     <div class="col-md-4 col-sm-6">
       <div class="thumbnail">
         <img src="<%= campground.image %>">
          <div class="caption">
            <h4> <%= campground.name %> </h4>
           <div>
            <span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
            </div>
         </div>
				  <p>
					  <a href="/campground/<%= campground._id %>" class="btn btn-primary">More Info</a>
				  </p>
                  </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>